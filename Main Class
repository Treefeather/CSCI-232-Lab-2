            String m = "";
            boolean keepGoing = true;
            while(keepGoing)
            {
	        Scanner s= new Scanner(System.in);
		String i= "";
		System.out.println("Enter size of hash table: "); //cast string to int
		int size =s.next();
		System.out.println("Enter initial number of items: ");
		int num =s.next(); //cast string to int
		System.out.println("Enter first letter of show, insert, or find: ");
		i=s.next();
		if (i.equals("s")){
		
		//print heap
		
		}
		else if (i.equals("i"))
		{
		System.out.println(Enter key value to insert: ");
		int key= s.next(); //cast string to int
		//insert key
		}
		else if (i.equals("f"))
		{
		System.out.println(Enter key value to insert: ");
		int key= s.next(); //cast string to int
		//find key
		}
		}
		}
			System.out.println("Enter text lines (only in lowercase), terminate with $ on it's own line");
			while (s.hasNextLine()){
				String line=s.nextLine();
				if (line.contains("$")) //debugging help from TA
				{
					break;
				}
				else{
				m= m+line+"/";
			}
			}
			m=m.substring(1);
			m=m.replace(' ','[');

                    System.out.println(m);
		    utils.countLetters(m);
                    utils.makeTree();
                    utils.assignCodes();
                            
		}
